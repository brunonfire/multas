
<h1> <%= t("general.companies") %> </h1>

<table>
  <thead>
    <tr>
      <th> <%= t("activerecord.attributes.user.name") %> </th>
      <th> <%= t("activerecord.attributes.company.company_type") %> </th>
      <th> <%= t("activerecord.attributes.company.cnpj") %> </th>
      <th> <%= t("activerecord.attributes.company.phone") %> </th>
      <th> <%= t("activerecord.attributes.company.address") %> </th>
      <th> <%= t("activerecord.attributes.company.number") %> </th>
      <th> <%= t("activerecord.attributes.company.zipcode") %> </th>
      <th> <%= t("activerecord.attributes.company.district") %> </th>
      <th> <%= t("activerecord.models.city") %> </th>
      <th> <%= t("activerecord.models.state") %> </th>
      <th><%= t("general.actions") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= enum_to_name(company, :company_type) %></td>
        <td><%= company.cnpj %></td>
        <td><%= company.phone %></td>
        <td><%= company.address %></td>
        <td><%= company.number %></td>
        <td><%= company.zipcode %></td>
        <td><%= company.district %></td>
        <td><%= company.city.name %></td>
        <td><%= company.city.state&.name %></td>
        <td><%= link_to t("general.buttons.show"), company %></td>
        <td><%= link_to t("general.buttons.edit"), edit_company_path(company) %></td>
        <td><%= link_to t("general.buttons.delete"), company, method: :delete, data: { confirm: I18n.t("general.messages.confirm ") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("general.buttons.new_company"), new_company_path %>
<%= will_paginate @companies %>