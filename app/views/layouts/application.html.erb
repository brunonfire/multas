<!DOCTYPE html>
<html>
  <head>
    <title>Nucleus Multas</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>



  </head>

  <body>
  <% if signed_in? %>
    <%= render "layouts/navbar_user" %>
  <% end %>
<div class="container-fluid supremo-bg-gray">
  <div class="row d-flex justify-content-around">

    <% unless signed_in? %>
      <div class="">
        <%= image_tag "foto_inicio.png" %>
      </div>
    <% end %>

    <div class="col-md-2 d-flex justify-content-center align-items-center">
      <%= render "layouts/sidebar_menu" if user_signed_in? %>
    </div>


    <div class="col-md-10 ">
      <%= notice %>
      <%= alert %>
      <%= yield %>
    </div>


  </div>
</div>

  </body>
</html>
