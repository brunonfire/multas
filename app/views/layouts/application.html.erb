<!DOCTYPE html>
<html>
  <head>
    <title>Nucleus Multas</title>



    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>


  </head>

  <body>
  <% if signed_in? %>
  <div class="">
    <%= render "layouts/navbar_user" %>
  </div>
  <% end %>
<div class="container-fluid">
  <div class="row d-flex justify-content-around">
    <% unless signed_in? %>
      <div class="">
        <%= image_tag "foto_inicio.png" %>
      </div>
    <% end %>

    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 ml-15">
      <%= render "layouts/sidebar_menu" if user_signed_in? %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mr-15 ">
      <%= notice %>
      <%= alert %>
      <%= yield %>
    </div>
  </div>
</div>

  </body>
</html>
