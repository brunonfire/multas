
<h1> <%= t("activerecord.attributes.fine.fine_points") %> </h1>

<h1 class="bg-danger mb-4 text-center">aaaaaaaa</h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.name") %></th>
      <th><%= t("activerecord.models.fine_point") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fine_points.each do |fine_point| %>
      <tr>
        <td><%= fine_point.name %></td>
        <td><%= fine_point.point %></td>
        <td><%= link_to t("general.buttons.show"), fine_point %></td>
        <td><%= link_to t("general.buttons.edit"), edit_fine_point_path(fine_point) %></td>
        <td><%= link_to t("general.buttons.delete"), fine_point, method: :delete, data: { confirm: I18n.t("general.messages.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= link_to t("general.buttons.new_fine"), new_fine_point_path %>
<%= will_paginate @fine_points %>
