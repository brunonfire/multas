
<p>
  <strong> <%= t("activerecord.attributes.user.name") %> </strong>
  <%= @user.name %>
</p>

<p>
  <strong> <%= t("activerecord.attributes.user.email") %> </strong>
  <%= @user.email %>
</p>

<p>
  <strong> <%= t("activerecord.attributes.user.status") %> </strong>
  <%= enum_to_name(@user, :status) %>
</p>

<p>
  <strong> <%= t("activerecord.attributes.user.user_type") %> </strong>
  <%= enum_to_name(@user, :user_type) %>
</p>


<%= link_to t("general.buttons.edit"), edit_user_path if current_user.admin? %>
<%= link_to t("general.buttons.delete"), user_path(@user), method: :delete if current_user.admin? %>
<%= link_to t("general.buttons.back"),  users_path %>

