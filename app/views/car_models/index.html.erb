
<h1> <%= t("activerecord.models.car_model") %> </h1>

<table>
  <thead>
    <tr>
      <th> <%= t("activerecord.attributes.user.name") %> </th>
      <th> <%= t("activerecord.models.car_brand") %> </th>
      <th> <%= t("activerecord.models.car_type") %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_models.each do |car_model| %>
      <tr>
        <td><%= car_model.name %></td>
        <td><%= car_model.car_brand.name %></td>
        <td><%= car_model.car_type.name %></td>
        <td><%= link_to t("general.buttons.show"), car_model %></td>
        <td><%= link_to t("general.buttons.edit"), edit_car_model_path(car_model) %></td>
        <td><%= link_to t("general.buttons.delete"), car_model, method: :delete, data: { confirm: I18n.t("general.messages.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("general.buttons.new_car_model"), new_car_model_path %>
<%= will_paginate @car_models %>
